<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nex"
    android:elevation="0dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background4">

    <ImageView
        android:id="@+id/slide_screen_image"
        android:layout_width="match_parent"
        android:layout_height="300sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100sp"
        android:paddingHorizontal="10sp"
        app:srcCompat="@drawable/story1" />

    <TextView
        android:id="@+id/btn_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Skip"
        android:layout_margin="30sp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="@color/color1"
        />




    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Learning now!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/slide_screen_image"
        android:layout_gravity="center"
        android:textColor="@color/color1"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_margin="50sp"
        />

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="10sp"
        android:text="select your academic year and department then Browse Courses and Books Specified for you from your faculty"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="50sp"
        android:textSize="14sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/desc"
        android:orientation="horizontal"
        android:layoutDirection="ltr"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="60dp"
        android:gravity="center">


        <ImageView
            android:id="@+id/ind1"
            android:layout_width="15sp"
            android:layout_height="15sp"
            app:srcCompat="@drawable/selected"
            android:layout_marginEnd="10dp"/>

        <ImageView
            android:id="@+id/ind2"
            android:layout_width="15sp"
            android:layout_height="15sp"
            app:srcCompat="@drawable/unselected"
            android:layout_marginEnd="10dp" />

        <ImageView
            android:id="@+id/ind3"
            android:layout_width="15sp"
            android:layout_height="15sp"
            app:srcCompat="@drawable/unselected"
            android:layout_marginEnd="20dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Previous"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="@color/color1"
        android:layout_margin="30sp"
        />

    <TextView
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Next"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="@color/color1"
        android:layout_margin="30sp"
        />











</androidx.constraintlayout.widget.ConstraintLayout>

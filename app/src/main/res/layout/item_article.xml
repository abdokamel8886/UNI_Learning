<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:outlineAmbientShadowColor="@color/background4"
        android:outlineSpotShadowColor="@color/background4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="10sp"
        app:cardBackgroundColor="@color/white"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="180sp"
                android:layout_margin="10sp"
                app:cardBackgroundColor="@color/white"
                android:src="@drawable/courses"
                android:scaleType="fitXY"
                app:cardCornerRadius="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/courses"
                        android:scaleType="fitXY"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>





                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/card1"
                android:paddingHorizontal="20sp"
                android:layout_marginTop="10sp"
                app:layout_constraintTop_toBottomOf="@id/card1"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Explanation of Data Structures"
                android:elevation="2dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/over_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/card1"
                android:layout_marginTop="5sp"
                app:layout_constraintTop_toBottomOf="@id/name_txt"
                android:paddingHorizontal="20sp"
                android:textSize="10sp"
                android:textStyle="bold"
                android:maxLines="3"
                android:text="............................................................................................................................................................................................................................"
                />

            <ImageView
                android:id="@+id/date"
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:src="@drawable/ic_baseline_date_range_24"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="@id/card1"
                app:layout_constraintTop_toBottomOf="@id/over_txt"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginVertical="10sp"
                android:layout_marginStart="20sp"
               />

            <TextView
                android:id="@+id/date_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/date"
                app:layout_constraintBottom_toBottomOf="@id/date"
                app:layout_constraintTop_toTopOf="@id/date"
                android:layout_marginStart="5sp"
                android:textSize="12sp"
                android:text="20-10-2020"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/date"
                app:layout_constraintBottom_toBottomOf="@id/date"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20sp"
                android:src="@drawable/ic_baseline_favorite_24"
                android:visibility="gone"

                />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>